{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "BoldareApp"
    }
  },
  "JwtSettings": {
    "Key": "9A7F3D0E2C8B4A1F9D6E3B5C1A7D8F0E",
    "Issuer": "BoldareApp",
    "Audience": "BoldareAppClient",
    "ExpiresMinutes": 60
  },
  "DatabaseCache": {
    "ConnectionString": "Data Source=brewerycache.db"
  }
}
